version: '2'

services:
  nginx:
     build: ./nginx/ 
     ports:
       - "80:80"
     volumes_from:
       - php
     volumes:
       - ./nginx/log:/var/log/nginx
     links:
       - php
  php:
     build: ./php/
     volumes:
       - ./www:/var/www/html
     links:
       - mariadb

   mariadb:
     image: mariadb
     restart: always
     volumes:
       - ./mariadb:/var/lib/mysql
     environment:
     MYSQL_ROOT_PASSWORD: PASSWORD
     MYSQL_USER: admin
     MYSQL_PASSWORD: PASSWORD
     MYSQL_DATABASE: projectdb
     expose:
       - "3306"

